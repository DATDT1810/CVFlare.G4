@page
@model CV_Flare.RazorPage.Pages.RegisterModel
@{
    Layout = "";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<section class="bg-light p-3 p-md-4 p-xl-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-xxl-11">
                <div class="card border-light-subtle shadow-sm">
                    <div class="row g-0" style="align-items:center; justify-content:center">

                        <div class="col-12 col-md-6 d-flex align-items-center justify-content-center">
                            <div class="col-12 col-lg-11 col-xl-10">
                                <div class="card-body p-3 p-md-4 p-xl-5">
                                    <div class="text-center mb-4">
                                        <a asp-page="index">
                                            <img src="~/img/logocv.jpg" alt="BootstrapBrain Logo"
                                                 style="width: 175px; height: 120px; object-fit: contain;">
                                        </a>
                                    </div>
                                    <h4 class="text-center">Create New User</h4>
                                    <form method="post">
                                        <div class="row gy-3 overflow-hidden">
                                            <div class="col-12">
                                                <div class="form-floating mb-3">
                                                    <input asp-for="RegisterVM.email" class="form-control"
                                                           placeholder="name@example.com" required>
                                                    <label asp-for="RegisterVM.email"
                                                           class="form-label">Email</label>
                                                    <span asp-validation-for="RegisterVM.email"
                                                          class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-floating mb-3">
                                                    <input asp-for="RegisterVM.password" type="password"
                                                           class="form-control" placeholder="Password" required>
                                                    <label asp-for="RegisterVM.password"
                                                           class="form-label">Password</label>
                                                    <span asp-validation-for="RegisterVM.password"
                                                          class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-floating mb-3">
                                                    <input asp-for="RegisterVM.confirmPassword" type="password"
                                                           class="form-control" placeholder="Confirm Password" required>
                                                    <label asp-for="RegisterVM.confirmPassword"
                                                           class="form-label">Confirm Password</label>
                                                    <span asp-validation-for="RegisterVM.confirmPassword"
                                                          class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="d-grid">
                                                    <button class="btn btn-dark btn-lg" type="submit">
                                                        Register
                                                        Now
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-center mt-2">
                                                <a asp-page="Login" class="link-secondary text-decoration-none">Back To Login</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var isSuccess = @(TempData["Success"] != null && TempData["Success"].ToString().ToLower() == "true" ? "true" : "false");

        if (isSuccess) {
            Swal.fire({
                title: 'Registration Successful!',
                text: 'You can now log in with your credentials.',
                icon: 'success',
                confirmButtonText: 'OK'
            }).then(() => {
                // Redirect to the login page after the alert
                window.location.href = '/Login';
            });
        }
    });
</script>

