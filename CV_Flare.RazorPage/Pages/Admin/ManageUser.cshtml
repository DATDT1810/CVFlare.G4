@page
@model CV_Flare.RazorPage.Pages.Admin.ManageUserModel
@{
    Layout = "_AdminLayout";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Dashboard</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item active">Dashboard</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">
        <div class="row">

            <!-- Left side columns -->
            <div class="col-lg-12">
                <div class="row">

                   
                    <!-- Recent Sales -->
                    <div class="col-12">
                        <div class="card recent-sales overflow-auto">

                         

                            <div class="card-body">



                                <table class="table table-hover table-striped align-middle text-center">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Họ và tên</th>
                                            <th>Email</th>
                                            <th>Số điện thoại</th>
                                            <th>Hành động</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.list)
                                        {
                                            <tr>
                                                <td>@item.UserFullname</td>
                                                <td>@item.UserEmail</td>
                                                <td>@item.UserPhone</td>
                                                <td>
                                                    <a asp-page="/Admin/UserDetail" asp-route-id="@item.UserId" class="btn btn-primary btn-sm">
                                                        <i class="bi bi-eye"></i> Chi tiết
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>



                            </div>
                        </div>
                    </div>
                        </div>
                    </div>
                

            </div>
    </section>

</main>




       
           
       

    
    




