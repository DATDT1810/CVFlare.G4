@page
@model CV_Flare.RazorPage.Pages.ForgotPassword.ResetPasswordModel
@{
    Layout = "";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<section class="bg-light p-3 p-md-4 p-xl-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-xxl-11">
                <div class="card border-light-subtle shadow-sm">
                    <div class="row g-0" style="align-items:center; justify-content:center">

                        <div class="col-12 col-md-6 d-flex align-items-center justify-content-center">
                            <div class="col-12 col-lg-11 col-xl-10">
                                <div class="card-body p-3 p-md-4 p-xl-5">
                                    <div class="text-center mb-4">
                                        <a asp-page="index">
                                            <img src="~/img/logocv.jpg" alt="BootstrapBrain Logo"
                                                 style="width: 175px; height: 120px; object-fit: contain;">
                                        </a>
                                    </div>
                                    <h4 class="text-center">Forget Password</h4>

                                    <form method="post">
                                        <div class="row gy-3 overflow-hidden">
                                            <div class="col-12">
                                                <div class="form-floating mb-3">
                                                    <input type="password" asp-for="ResetPasswordVM.password" class="form-control"
                                                           placeholder="new password" required>
                                                    <label asp-for="ResetPasswordVM.password"
                                                           class="form-label">New password</label>
                                                    <span asp-validation-for="ResetPasswordVM.password"
                                                          class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-floating mb-3">
                                                    <input asp-for="ResetPasswordVM.confirmPassword" type="password"
                                                           class="form-control" placeholder="Confirm your password" required>
                                                    <label asp-for="ResetPasswordVM.confirmPassword"
                                                           class="form-label">Confirm Password</label>
                                                    <span asp-validation-for="ResetPasswordVM.confirmPassword"
                                                          class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-12">
                                                <div class="d-grid">
                                                    <button class="btn btn-dark btn-lg" type="submit">
                                                        Submit
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
